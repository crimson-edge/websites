---
import { ViewTransitions } from 'astro:transitions';
import ChatWidget from '../components/ChatWidget.astro';
import StructuredData from '../components/StructuredData.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Expert guidance for men over 40 looking to transform their bodies and lives through proven fitness and nutrition strategies.",
  image = "/og-image.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="keywords" content="fitness over 40, men's health, weight loss for men, strength training, nutrition for men, male transformation, fitness coaching" />
    <meta name="author" content="Male Transformation Over 40" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    
    <StructuredData />
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900">
    <slot />
    <ChatWidget />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  
  /* Ensure smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Improve mobile tap targets */
  @media (max-width: 640px) {
    button, a {
      min-height: 44px;
      min-width: 44px;
    }
  }
</style>
