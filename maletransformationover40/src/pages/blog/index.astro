---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog');
console.log('Found blog posts:', posts.map(p => ({ 
  slug: p.slug, 
  title: p.data.title,
  date: p.data.pubDate 
})));

const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

console.log('Sorted posts:', sortedPosts.map(p => ({ 
  slug: p.slug, 
  title: p.data.title,
  date: p.data.pubDate 
})));
---

<Layout title="Blog | Male Transformation">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Blog</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        sortedPosts.map((post) => {
          console.log('Rendering post:', post.slug);
          return (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
              {post.data.heroImage && (
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400">
                    {post.data.title}
                  </a>
                </h2>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500 dark:text-gray-400">
                    {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </span>
                  {post.data.author && (
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                      By {post.data.author}
                    </span>
                  )}
                </div>
                {post.data.tags && (
                  <div class="mt-4 flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          );
        })
      }
    </div>
  </main>
</Layout>
