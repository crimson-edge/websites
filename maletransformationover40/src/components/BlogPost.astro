---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: string;
}

const { title, excerpt, date, author } = Astro.props;
---

<article class="bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-900 mb-2">{title}</h2>
  <div class="flex gap-4 text-sm text-gray-600 mb-4">
    <span>{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
    <span>By {author}</span>
  </div>
  <p class="text-gray-600">{excerpt}</p>
  <a href="#" class="inline-block mt-4 text-primary font-medium hover:text-primary-dark">Read More â†’</a>
</article>