---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Connect With Us</h3>
        <div class="grid grid-cols-4 gap-4">
          {socialLinks.map(link => (
            <a 
              href={link.href} 
              class="text-gray-300 hover:text-white transition-colors"
              aria-label={`Follow us on ${link.label}`}
            >
              <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
                <Fragment set:html={icons[link.platform]} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Newsletter -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Stay Updated</h3>
        <p class="text-gray-300 mb-4">Subscribe to our newsletter for the latest financial tips and resources.</p>
        <form id="newsletter-form" class="space-y-4">
          <div>
            <input 
              id="newsletter-email"
              type="email" 
              placeholder="Enter your email" 
              required
              class="w-full px-4 py-2 rounded-md bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500"
            />
          </div>
          <button 
            id="newsletter-submit"
            type="submit" 
            class="w-full bg-primary-600 text-white py-2 px-4 rounded-md hover:bg-primary-700 transition-colors"
          >
            Subscribe
          </button>
          <div id="newsletter-status" role="status" aria-live="polite"></div>
        </form>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-800 text-center text-gray-400">
      <p>&copy; {new Date().getFullYear()} Money Mastery Resources. All rights reserved.</p>
    </div>
  </div>
</footer>

<script src="/src/scripts/newsletter.js"></script>