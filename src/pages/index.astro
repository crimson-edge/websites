---
import Layout from '../layouts/Layout.astro';
import ResourceCard from '../components/ResourceCard.astro';
import VideoPlayer from '../components/VideoPlayer.astro';
import FinancialCalculators from '../components/FinancialCalculators.astro';
import Testimonials from '../components/Testimonials.astro';

const resources = [
  {
    title: 'Credit Repair Magic',
    description: 'Transform your credit score and unlock financial opportunities with our proven system. Learn the secrets to improving your credit score and securing better financial terms.',
    icon: '‚≠ê',
    href: 'http://credit.crimsonedgeventures.com',
    image: '/images/credit-repair.jpg'
  },
  {
    title: 'Wealth Switch',
    description: 'Discover the powerful mindset shifts and proven strategies that unlock lasting financial abundance. Your path to wealth starts with the right mental framework.',
    icon: 'üîë',
    href: 'https://www.digistore24.com/redir/413844/CrimsonEdge/',
    image: '/images/wealth-mindset.jpg'
  }
];
---

<Layout title="Money Mastery Resources">
  <div class="bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-24">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold text-gray-900 font-display mb-4 sm:mb-6">
          Master Your Money,<br class="hidden sm:inline" />
          <span class="text-primary-600">Secure Your Future</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 mb-6 sm:mb-8 max-w-2xl mx-auto">
          Your journey to financial freedom starts here. Discover tools, resources, and strategies to take control of your financial future.
        </p>
        <div class="mt-8 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
          <VideoPlayer videoId="qfmjVYUyOek" title="Money Mastery Resources Introduction" />
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Section -->
  <section class="py-12 sm:py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-6 sm:mb-8">Featured Resources</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 max-w-5xl mx-auto">
        {resources.map(resource => (
          <a 
            href={resource.href} 
            class="group relative overflow-hidden rounded-2xl bg-white shadow-xl transition-all duration-300 hover:shadow-2xl hover:-translate-y-1"
          >
            <div class="aspect-w-16 aspect-h-9 w-full">
              <img 
                src={resource.image} 
                alt={resource.title}
                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent">
              <div class="absolute bottom-0 p-6 sm:p-8">
                <div class="flex items-center space-x-3 mb-3">
                  <div class="bg-white/10 backdrop-blur-sm p-2 rounded-lg">
                    <span class="text-2xl">{resource.icon}</span>
                  </div>
                  <h3 class="text-xl sm:text-2xl font-bold text-white">{resource.title}</h3>
                </div>
                <p class="text-white/90 text-sm sm:text-base max-w-prose">
                  {resource.description}
                </p>
                <div class="mt-4">
                  <span class="inline-flex items-center text-white font-semibold group-hover:underline">
                    Learn More
                    <svg class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-12 sm:py-24 bg-white" id="calculators">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-8 sm:mb-12">Financial Calculators</h2>
      <FinancialCalculators />
    </div>
  </section>

  <section class="py-12 sm:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Testimonials />
    </div>
  </section>
</Layout>

<style>
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%;
  }

  .aspect-w-16 > * {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>