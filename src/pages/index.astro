---
import Layout from '../layouts/Layout.astro';
import ResourceCard from '../components/ResourceCard.astro';
import VideoPlayer from '../components/VideoPlayer.astro';

const resources = [
  {
    title: 'Credit Repair Magic',
    description: 'Transform your credit score and unlock financial opportunities',
    icon: '⭐',
    href: 'http://credit.crimsonedgeventures.com'
  },
  {
    title: 'Wealth Switch',
    description: 'The SECRET KEY To Financial Success',
    icon: '🔑',
    href: 'https://www.digistore24.com/redir/413844/CrimsonEdge/'
  },
  {
    title: 'Calculators',
    description: 'Interactive tools to help you plan your financial future',
    icon: '🧮',
    href: '#calculators'
  },
  {
    title: 'Tutorials',
    description: 'Step-by-step guides to master your finances',
    icon: '📚',
    href: '#tutorials'
  },
  {
    title: 'Tools',
    description: 'Essential tools for budgeting and tracking',
    icon: '🛠️',
    href: '#tools'
  },
  {
    title: 'Resources',
    description: 'Curated collection of financial resources',
    icon: '📑',
    href: '#resources'
  }
];
---

<Layout title="Money Mastery Resources">
  <div class="bg-gradient-to-b from-primary-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-24">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold text-gray-900 font-display mb-4 sm:mb-6">
          Master Your Money,<br class="hidden sm:inline" />
          <span class="text-primary-600">Secure Your Future</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 mb-6 sm:mb-8 max-w-2xl mx-auto">
          Your journey to financial freedom starts here. Discover tools, resources, and strategies to take control of your financial future.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <a href="#resources" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 md:text-lg">
            Explore Resources
          </a>
          <a href="#contact" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-700 bg-primary-100 hover:bg-primary-200 md:text-lg">
            Contact Us
          </a>
        </div>
        
        <div class="mt-8 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
          <VideoPlayer videoId="qfmjVYUyOek" title="Money Mastery Resources Introduction" />
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Section -->
  <section class="py-12 sm:py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-6 sm:mb-8">Featured Resources</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-8 max-w-4xl mx-auto">
        <a href="http://credit.crimsonedgeventures.com" class="block p-6 sm:p-8 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow">
          <div class="flex items-center space-x-4">
            <div class="bg-yellow-100 p-3 rounded-full flex-shrink-0">
              <span class="text-2xl sm:text-3xl">⭐</span>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-1">Credit Repair Magic</h3>
              <p class="text-sm sm:text-base text-gray-600">Transform your credit score and unlock financial opportunities</p>
            </div>
          </div>
        </a>
        <a href="https://www.digistore24.com/redir/413844/CrimsonEdge/" class="block p-6 sm:p-8 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow">
          <div class="flex items-center space-x-4">
            <div class="bg-blue-100 p-3 rounded-full flex-shrink-0">
              <span class="text-2xl sm:text-3xl">🔑</span>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-1">Wealth Switch</h3>
              <p class="text-sm sm:text-base text-gray-600">The SECRET KEY To Financial Success</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <section class="py-12 sm:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-8 sm:mb-12">Everything You Need</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
        {resources.map(resource => (
          <ResourceCard {...resource} />
        ))}
      </div>
    </div>
  </section>
</Layout>