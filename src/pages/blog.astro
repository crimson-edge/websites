---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    id: 'getting-started-budgeting',
    title: 'Getting Started with Budgeting',
    excerpt: 'Learn the fundamentals of creating and sticking to a budget that works for you.',
    date: '2024-04-15',
    author: 'Sarah Johnson',
    category: 'Budgeting',
    featuredImage: '/images/blog/budgeting-featured.jpg'
  },
  {
    id: 'investment-strategies-beginners',
    title: 'Investment Strategies for Beginners',
    excerpt: 'A comprehensive guide to starting your investment journey on the right foot.',
    date: '2024-04-14',
    author: 'Michael Chen',
    category: 'Investing',
    featuredImage: '/images/blog/investing-featured.jpg'
  },
  {
    id: 'understanding-credit-scores',
    title: 'Understanding Credit Scores',
    excerpt: 'Everything you need to know about credit scores and how to improve them.',
    date: '2024-04-13',
    author: 'David Smith',
    category: 'Credit',
    featuredImage: '/images/blog/credit-scores-featured.jpg'
  }
];
---

<Layout title="Blog - Money Mastery Resources">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Latest Articles</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-300">
          <img 
            src={post.featuredImage} 
            alt={post.title} 
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <div class="flex items-center gap-4 mb-4">
              <span class="px-3 py-1 bg-primary-100 text-primary-800 rounded-full text-sm">
                {post.category}
              </span>
              <time class="text-gray-500 text-sm">{post.date}</time>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{post.title}</h2>
            <p class="text-gray-600 mb-4">{post.excerpt}</p>
            <div class="flex items-center justify-between">
              <span class="text-gray-500">By {post.author}</span>
              <a 
                href={`/blog/${post.id}`} 
                class="text-primary-600 hover:text-primary-700 font-medium"
              >
                Read more â†’
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>