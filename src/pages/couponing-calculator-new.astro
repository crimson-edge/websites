<template>
  <section class="calculator-section">
    <h2 class="text-2xl font-bold mb-4">Couponing Calculator</h2>
    <form @submit.prevent="calculateSavings">
      <div class="mb-4">
        <label for="originalPrice" class="block mb-2">Original Price:</label>
        <input type="number" id="originalPrice" v-model="originalPrice" class="border rounded p-2 w-full" required />
      </div>
      <div class="mb-4">
        <label for="couponValue" class="block mb-2">Coupon Value:</label>
        <input type="number" id="couponValue" v-model="couponValue" class="border rounded p-2 w-full" required />
      </div>
      <button type="submit" class="bg-blue-500 text-white rounded p-2">Calculate Savings</button>
    </form>
    <div v-if="finalPrice !== null" class="mt-4">
      <h3 class="font-bold">Final Price: ${{ finalPrice.toFixed(2) }}</h3>
    </div>
  </section>
</template>

<script>
export default {
  data() {
    return {
      originalPrice: 0,
      couponValue: 0,
      finalPrice: null,
    };
  },
  methods: {
    calculateSavings() {
      this.finalPrice = this.originalPrice - this.couponValue;
    },
  },
};
</script>

