---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';

const posts = [
  {
    title: "How to Start Extreme Couponing Without Getting Overwhelmed",
    excerpt: "A beginner's guide to getting started with extreme couponing, including essential tips and tools.",
    date: "2024-03-20",
    category: "Beginner's Guide",
    image: "/images/blog/getting-started.jpg"
  },
  {
    title: "Master Coupon Stacking for Maximum Savings",
    excerpt: "Advanced strategies for combining coupons with cashback offers and loyalty programs.",
    date: "2024-03-18",
    category: "Advanced Strategies",
    image: "/images/blog/coupon-stacking.jpg"
  },
  {
    title: "Top Digital Coupon Apps You Need in 2024",
    excerpt: "A comprehensive review of the best mobile apps for finding and organizing digital coupons.",
    date: "2024-03-15",
    category: "Tech & Tools",
    image: "/images/blog/digital-apps.jpg"
  }
];
---

<Layout title="Blog">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-4xl font-display font-bold text-gray-900 mb-8">The Couponing Insider</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <BlogCard
          title={post.title}
          excerpt={post.excerpt}
          date={post.date}
          category={post.category}
          image={post.image}
        />
      ))}
    </div>
  </div>
</Layout>