---
import Layout from '../layouts/Layout.astro';
import FAQ from '../components/FAQ.astro';

const pageTitle = "Frequently Asked Questions - Save Earn Share";
const description = "Find answers to common questions about extreme couponing, shopping strategies, and maximizing your savings with Save Earn Share.";
---

<Layout 
  title={pageTitle}
  description={description}
  openGraph={{
    title: pageTitle,
    description,
    type: 'website',
    url: '/faq',
    modifiedTime: '2024-12-14T16:40:31-08:00'
  }}
>
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Frequently Asked Questions
      </h1>
      <p class="text-xl text-gray-600">
        Find answers to common questions about extreme couponing and smart shopping strategies
      </p>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <FAQ />
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600 mb-4">
        Still have questions? We're here to help!
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary-dark transition-colors duration-150"
      >
        Contact Us
      </a>
    </div>
  </main>
</Layout>

<style>
  .bg-primary {
    @apply bg-blue-600;
  }
  .hover\:bg-primary-dark:hover {
    @apply bg-blue-700;
  }
</style>
