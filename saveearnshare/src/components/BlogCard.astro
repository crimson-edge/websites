---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  category: string;
  image: string;
}

const { title, excerpt, date, category, image } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
  <div class="aspect-w-16 aspect-h-9 bg-gray-100">
    <div class="w-full h-48 bg-primary/10"></div>
  </div>
  <div class="p-6">
    <div class="flex items-center justify-between mb-4">
      <span class="inline-block px-3 py-1 text-sm font-medium text-primary bg-primary/10 rounded-full">
        {category}
      </span>
      <time class="text-sm text-gray-500" datetime={date}>
        {new Date(date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
      </time>
    </div>
    <h2 class="text-xl font-display font-bold text-gray-900 mb-2 hover:text-primary transition-colors">
      {title}
    </h2>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <a href="#" class="text-primary font-medium hover:text-primary/90 transition-colors">
      Read more â†’
    </a>
  </div>
</article>