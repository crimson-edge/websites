---
interface Props {
  title: string;
  description: string;
  icon: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;

const icons = {
  database: `<path stroke-linecap="round" stroke-linejoin="round" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v7a2 2 0 01-2 2H6a2 2 0 01-2-2v-7m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />`,
  calculator: `<path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
  tag: `<path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />`
};

const Component = href ? 'a' : 'div';
---

<Component
  href={href}
  class="bg-white p-4 sm:p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow cursor-pointer"
>
  <div class="w-10 sm:w-12 h-10 sm:h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-3 sm:mb-4">
    <svg class="w-5 sm:w-6 h-5 sm:h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[icon]} />
  </div>
  <h3 class="text-lg sm:text-xl font-display font-bold text-gray-900 mb-2">{title}</h3>
  <p class="text-sm sm:text-base text-gray-600">{description}</p>
</Component>