---
import { Image } from 'astro:assets';
import jenniferImage from '../assets/testimonials/jennifer.jpg';
import rachelImage from '../assets/testimonials/rachel.jpg';
import mariaImage from '../assets/testimonials/maria.jpg';

const testimonials = [
  {
    name: "Jennifer M.",
    role: "Extreme Couponer",
    image: jenniferImage,
    quote: "Using the coupon stacking strategies I learned here, I saved over $12,000 on groceries last year! The digital and paper coupon combination techniques are absolutely game-changing.",
    imageCredit: "Photo by Christina @ wocintechchat.com on Unsplash"
  },
  {
    name: "Rachel K.",
    role: "Loyalty Program Expert",
    image: rachelImage,
    quote: "I've mastered multiple store rewards programs thanks to this site. Last month alone, I earned $450 in rewards points by strategically timing my purchases with bonus point events.",
    imageCredit: "Photo by Michael Dam on Unsplash"
  },
  {
    name: "Maria S.",
    role: "Smart Shopping Strategist",
    image: mariaImage,
    quote: "The price matching and cashback app strategies here are incredible. I consistently get items for 70-90% off by combining store sales, coupons, and cashback rewards. It's transformed how I shop!",
    imageCredit: "Photo by Zack Silver on Unsplash"
  }
];

const testimonialSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": testimonials.map((testimonial, index) => ({
    "@type": "Review",
    "position": index + 1,
    "author": {
      "@type": "Person",
      "name": testimonial.name
    },
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "5",
      "bestRating": "5"
    },
    "reviewBody": testimonial.quote,
    "itemReviewed": {
      "@type": "Product",
      "name": "Save Earn Share Platform",
      "description": "Extreme couponing and shopping rewards strategies platform"
    }
  }))
};
---

<section class="py-12 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">
        Our Savvy Shoppers
      </h2>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        Real savings from our extreme couponing community
      </p>
    </div>

    <div class="mt-12 grid gap-8 lg:grid-cols-3 lg:gap-x-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform transition duration-500 hover:scale-105">
          <div class="p-8">
            <div class="flex items-center">
              <div class="relative w-16 h-16">
                <Image
                  class="rounded-full object-cover w-full h-full"
                  src={testimonial.image}
                  alt={testimonial.name}
                  title={testimonial.imageCredit}
                  width={64}
                  height={64}
                />
              </div>
              <div class="ml-4">
                <div class="text-lg font-medium text-gray-900 dark:text-white">
                  {testimonial.name}
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  {testimonial.role}
                </div>
              </div>
            </div>
            <div class="mt-4">
              <p class="text-gray-600 dark:text-gray-300 italic">
                "{testimonial.quote}"
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-8 text-center text-sm text-gray-500 dark:text-gray-400">
      <p>Photos courtesy of Unsplash photographers</p>
    </div>
  </div>
</section>

<script type="application/ld+json" set:html={JSON.stringify(testimonialSchema)} />
