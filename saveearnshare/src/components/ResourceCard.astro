---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<a href={href} class="block group">
  <div class="bg-white p-4 sm:p-6 rounded-lg shadow-sm border border-gray-100 group-hover:shadow-md transition-shadow h-full">
    <h3 class="text-lg sm:text-xl font-display font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors">
      {title}
    </h3>
    <p class="text-sm sm:text-base text-gray-600">{description}</p>
  </div>
</a>